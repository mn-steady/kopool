%h2.gold.text-center Edit a Week

%a.btn.btn-primary.btn-lg{"ng-href" => "#/seasons/{{week.season_id}}/weeks", role: "button"} View All Weeks

%br
%br

%form.form-horizontal.gold

  .form-group
    %label.col-sm-2 Season ID
    .col-sm-10
      {{week.season_id}}

  .form-group
    %label.col-sm-2 Week Number
    .col-sm-10
      %input.form-control{"id" => "week-number", "type" => "number", "ng-model" => "week.week_number"}

  .form-group
    %label.col-sm-2 Start Date
    .col-sm-10
      %input.form-control{"type" => "text", "ng-model" => "week.start_date", "placeholder" => "YYYY-mm-dd"}

  .form-group
    %label.col-sm-2 End Date
    .col-sm-10
      %input.form-control{"type" => "text", "ng-model" => "week.end_date", "placeholder" => "YYYY-mm-dd"}

  .form-group
    %label.col-sm-2 Deadline
    .col-sm-10
      %input.form-control{"type" => "text", "ng-model" => "week.deadline", "placeholder" => "YYYY-mm-dd"}


  %button.btn.btn-success.btn-lg{"ng-click"=>"save(week)", type: "submit"} Save