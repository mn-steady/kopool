.navbar.navbar-fixed-top{"ng-controller" => "navbarCtrl", role: "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: "#"}
        %h3 KO Pool
    %br

    %form.navbar-form.navbar-right{"ng-hide" => "isSignedIn()", role: "form"}
      .form-group
        %input.form-control{:id => "sign_on_field", "ng-hide" => "isSignedIn()", "ng-model" => "login_user.email", placeholder: "Email", type: "text"}/
      .form-group
        %input.form-control{:id => "password_field", "ng-hide" => "isSignedIn()", "ng-model" => "login_user.password", placeholder: "Password", type: "password"}/
      %button.btn.btn-warning.btn-lg{:id => "sign_in_button", "ng-click"=>"login_logout()", type: "submit"} {{button_sign_in_or_out()}}

    .navbar-right.btn-group.navbar-group{"ng-show" => "isSignedIn()", :dropdown => ""}
      %button.btn.btn-warning.btn-lg.dropdown-toggle{:type => "button"} 
        {{display_name()}}
        %span.caret
      %ul.dropdown-menu{:role => "menu"}
        %li
          %a.btn.btn-lg{"ng-click"=>"login_logout()", type: "submit", :role => "menuitem"} {{button_sign_in_or_out()}}
        %li.divider
        %li
          %a{href: "#/registration/rules"} Rules
      

